{
  "name": "qv-contracts",
  "version": "0.0.1",
  "description": "Quadratic Voting contracts",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/chnejohnson/quadratic-voting-contracts",
  "main": "index.js",
  "files": [
    "build",
    "typechain"
  ],
  "scripts": {
    "start": "hardhat node",
    "build": "hardhat compile && hardhat typechain",
    "clean": "shx rm -rf ./build ./cache ./coverage ./typechain ./coverage.json ./abi",
    "coverage": "yarn typechain && hardhat coverage --solcoverjs ./.solcover.js --temp build/contracts --testfiles \"./tests/**/*.ts\"",
    "test": "hardhat test",
    "typechain": "hardhat typechain",
    "prettier": "prettier -c .",
    "prettier:fix": "prittier -w .",
    "lint:ts": "eslint '{tests,scripts}/**/*.ts'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint": "yarn lint:ts && yarn lint:sol",
    "docs:generate": "npx solidity-docgen --solc-module solc-0.7 -t ./docs/templates/ -i ./contracts -o ./docs"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.3.0-solc-0.7",
    "maci-contracts": "1.0.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.47",
    "@types/shelljs": "^0.8.11",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.9.1",
    "hardhat-gas-reporter": "^1.0.8",
    "maci-core": "^1.0.4",
    "maci-crypto": "^1.0.4",
    "maci-domainobjs": "1.0.4",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "shelljs": "^0.8.5",
    "snarkjs": "^0.4.16",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.2"
  }
}
